<!doctype html>

<html lang="en">
<head>
  <title>Main</title>

  <meta charset="utf-8">
  <meta name="description" content="The HTML5 Herald">
  <meta name="author" content="SitePoint">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link  href='/stylesheets/style.css' type="text/css" rel="stylesheet">
  <script href="../node_modules/ejs/ejs.js"></script>
</head>
<body>
  <header>
    <nav class = "navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href='/'>Files4U</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href = '/'>Main</a></li>
          <li><a href = '/files/Games'>Games</a></li>
          <li><a href = '/files/Videos'>Videos</a></li>
          <li><a href = '/files/Audio'>Audio</a></li>
          <li><a href = '/files/Text'>Texts</a></li>
          <li><a href = '/files/Images'>Images</a></li>
          <li><a href = '/files/Software'>Software</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if (!user) { %>
                        <li><a href = '/register'><span class="glyphicon glyphicon-user"></span> Sign in</a></li>
                        <li><a id="login" href = '/login'><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    <% } else { %>
                        <li><a href = '/logout'><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                        <li><a href = '/profile'><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                    <% } %>
       </ul>
     </div>
    </nav>
  </header>
  <body>
  </body>
  <div class='container'>
    <div  class="col-lg-12">
      <input type="search" class="form-control" placeholder="Search..." id="search">
    </div>
    <br />
    <br />
    <div class="col-lg-12" id="searching_results">
          <% if (posts.length === 0) { %>
            <div class="panel panel-warning">
                <div class="panel-body">No matches were found for your query.</div>
            </div>
                    <% } else { %>
                      <% for(var i = 0; i < posts.length; i++) { %>
                        <div class="panel panel-default">
                          <div class="panel-heading"><a href='/post/<%= posts[i]._id %>'><%= posts[i].title %></a></div>
                          <div class="panel-body"><%= posts[i].description %></div>
                        </div>
                          <% } %>
                    <% } %>
                  </div>

  </div>
 <script src="/js/main.js"></script>
</body>
</html>

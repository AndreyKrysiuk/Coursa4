<!doctype html>


<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Update Post</title>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link  href='/stylesheets/style.css' type="text/css" rel="stylesheet">

</head>
<body>
  <header>
    <nav class = "navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href='/'>Files4U</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href = '/'>Main</a></li>
          <li><a href = '/files/Games'>Games</a></li>
          <li><a href = '/files/Videos'>Videos</a></li>
          <li><a href = '/files/Audio'>Audio</a></li>
          <li><a href = '/files/Text'>Texts</a></li>
          <li><a href = '/files/Images'>Images</a></li>
          <li><a href = '/files/Software'>Software</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href = '/logout'><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
          <li><a href = '/profile'><span class="glyphicon glyphicon-user"></span> Profile</a></li>
       </ul>
     </div>
    </nav>
  </header>
	<div class='container'>
		<h1>Update your post</h1>

    <form action='/update_post/<%= post._id %>' method='POST' enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="username" class="form-control" name="title" id="title" value='<%= post.title %>'>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" class="form-control" name="description" id="description" value='<%= post.description %>'>
      </div>
      Cathegory:
      <select name = "cathegory" class="selectpicker" title="Choose one of the following...">
        <option value="Games">Games</option>
        <option value="Images">Images</option>
        <option value="Videos">Video</option>
        <option value="Software">Software</option>
        <option value="Audio">Audio</option>
        <option value="Text">Text</option>
      </select>
      <div class="form-group">
        <label for="files">Load Files:</label>
        <input type="file" name="files" id="files" multiple="multiple">
      </div>
      <input type="hidden" name="_csrf" value="<%=csrfToken%>">
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
	</div>
</body>
</html>
